name: Atlas
on:
  push:
    branches:
      - {{ .DefaultBranch }}
  pull_request:
    paths:
      - '{{ .Path }}/*'
# Permissions to write comments on the pull request.
permissions:
  contents: read
  pull-requests: write
jobs:
  lint:
    {{- template "Services" . }}
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
        with:
          fetch-depth: 0
      - uses: ariga/atlas-action@master
        with:
          dir: '{{ .Path }}'
          {{ template "UseServices" (args .Driver "localhost") }}
          cloud-token: {{`${{ secrets.`}}{{ .SecretName }}{{` }}`}}
  sync:
    needs: lint
    {{- template "Services" . }}
    if: github.ref == 'refs/heads/{{ .DefaultBranch }}'
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: ariga/atlas-sync-action@master
        with:
          dir: '{{ .Path }}'
          {{ template "UseServices" (args .Driver .Driver) }}
          cloud-token: {{`${{ secrets.`}}{{ .SecretName }}{{` }}`}}

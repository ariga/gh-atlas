name: Atlas
on:
  push:
    branches:
      - {{ .DefaultBranch }}
    paths:
      - .github/workflows/ci-atlas.yaml
      - '{{ .Path }}/*'
  pull_request:
    paths:
      - '{{ .Path }}/*'
# Permissions to write comments on the pull request.
permissions:
  contents: read
  pull-requests: write
jobs:
  atlas:
    {{- if .CreateDevURL }}
    {{- template "services" . }}
    {{- end }}
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
        with:
          fetch-depth: 0
      - uses: ariga/setup-atlas@v0
        with:
          cloud-token: {{`{{ secrets.`}}{{ .SecretName }}{{` }}`}}
      {{- if eq .Flow "migrate" }}
        {{- template "atlas-migrate" . }}
      {{- else if eq .Flow "schema" }}
        {{- template "atlas-schema" . }}
      {{- end }}
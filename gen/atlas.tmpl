name: Atlas
on:
  push:
    branches:
      - {{ .DefaultBranch }}
  pull_request:
    paths:
      - '{{ .Path }}/*'
# Permissions to write comments on the pull request.
permissions:
  contents: read
  pull-requests: write
jobs:
  lint:
    {{- if .Dialect | eq "mysql" }}
    services:
      # Spin up a mysql:8 container to be used as the dev-database for analysis.
      mysql:
        image: mysql:8
        env:
          MYSQL_DATABASE: dev
          MYSQL_ROOT_PASSWORD: pass
        ports:
          - 3306:3306
        options: >-
          --health-cmd "mysqladmin ping -ppass"
          --health-interval 10s
          --health-start-period 10s
          --health-timeout 5s
          --health-retries 10
    {{- end }}
    {{- if .Dialect | eq "postgres" }}
    services:
      # Spin up a postgres:15 container to be used as the dev-database for analysis.
      postgres15:
        image: postgres:15
        env:
          POSTGRES_DB: dev
          POSTGRES_PASSWORD: pass
        ports:
          - 5432:5432
        options: >-
          --health-cmd pg_isready
          --health-interval 10s
          --health-start-period 10s
          --health-timeout 5s
          --health-retries 5
    {{- end }}
    {{- if .Dialect | eq "maria" }}
    services:
      # Spin up a mariadb:11 container to be used as the dev-database for analysis.
      maria11:
        image: mariadb:11
        env:
          MYSQL_DATABASE: dev
          MYSQL_ROOT_PASSWORD: pass
        ports:
          - 3306:3306
        options: >-
          --health-cmd "mysqladmin ping -ppass"
          --health-interval 10s
          --health-start-period 10s
          --health-timeout 5s
          --health-retries 10
    {{- end }}
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
        with:
          fetch-depth: 0
      - uses: ariga/atlas-action@v0
        with:
          dir: '{{ .Path }}'
          {{- if .Dialect | eq "mysql" }}
          dev-url: "mysql://root:pass@localhost:3306/dev"
          {{- end }}
          {{- if .Dialect | eq "postgres" }}
          dev-url: "postgres://postgres:pass@localhost:5432/dev?sslmode=disable"
          {{- end }}
          {{- if .Dialect | eq "maria" }}
          dev-url: "maria://root:pass@localhost:3306/dev"
          {{- end }}
          {{- if .Dialect | eq "sqlite" }}
          dev-url: "sqlite://dev?mode=memory"
          {{- end }}
          cloud-token: {{`${{secrets.ATLAS_CLOUD_TOKEN}}`}}
  sync:
    needs: lint
    if: github.ref == 'refs/heads/{{ .DefaultBranch }}'
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: ariga/atlas-sync-action@v0
        with:
          dir: '{{ .Path }}'
          driver: {{ .Dialect }}
          cloud-token: {{`${{secrets.ATLAS_CLOUD_TOKEN}}`}}
